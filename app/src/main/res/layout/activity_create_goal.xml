<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateGoalActivity"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_big_goal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="big goal"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        android:paddingHorizontal="5dp"
        android:paddingVertical="8dp"
        android:background="@drawable/edittext_profile"/>
    <TextView
        android:id="@+id/tv_ddl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="When do you want to complete this?"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        android:paddingHorizontal="5dp"
        android:paddingVertical="8dp"
        android:background="@drawable/edittext_profile"/>

    <TextView
        android:id="@+id/tv_goal_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="goal type"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        android:paddingHorizontal="5dp"
        android:paddingVertical="8dp"
        android:background="@drawable/edittext_profile"/>
    <TextView
        android:id="@+id/tv_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="start date"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        android:paddingHorizontal="5dp"
        android:paddingVertical="8dp"
        android:background="@drawable/edittext_profile"/>
    <TextView
        android:id="@+id/tv_due"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="When is it due?"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        android:paddingHorizontal="5dp"
        android:paddingVertical="8dp"
        android:background="@drawable/edittext_profile"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Add Subgoal"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:background="@drawable/signup"
            android:gravity="center"
            android:textAllCaps="false"
            android:paddingVertical="10dp"
            android:paddingHorizontal="15dp"
            />

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="create goal"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:background="@drawable/signup"
            android:gravity="center"
            android:textAllCaps="false"
            android:paddingVertical="10dp"
            android:paddingHorizontal="15dp"
            />
    </LinearLayout>
</LinearLayout>