<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_time">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edittext_profile"
            android:text="Jan, 04, 2020 -- 06:34 PM"
            android:textStyle="bold"
            android:paddingVertical="10dp"
            android:layout_margin="5dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edittext_profile"
            android:text="Jan, 04, 2020 -- 06:34 PM"
            android:textStyle="bold"
            android:paddingVertical="10dp"
            android:layout_margin="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_time"
        android:id="@+id/ll_subgoals_list">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/signup"
            android:layout_margin="5dp"
            android:text="Revise Personal Deadline"
            android:textColor="#ffffff"
            android:textAllCaps="false"
            android:textSize="16sp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/signup"
            android:layout_margin="5dp"
            android:text="Revise Due Date"
            android:textColor="#ffffff"
            android:textAllCaps="false"
            android:textSize="16sp"/>
    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_subgoals_list">
    </ListView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/signup"
        android:layout_margin="5dp"
        android:text="add sub goal"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:layout_below="@id/ll_subgoals_list"
        android:paddingHorizontal="60dp"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>