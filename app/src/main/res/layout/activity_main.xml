<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/et_email"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/email"
        android:ems="10"
        android:hint="email"
        android:inputType="textPersonName"
        android:padding="5dp"
        app:layout_constraintEnd_toStartOf="@+id/gl_right_email"
        app:layout_constraintStart_toStartOf="@+id/gl_left_email"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/email"
        android:ems="10"
        android:hint="password"
        android:inputType="textPersonName"
        android:padding="5dp"
        app:layout_constraintEnd_toStartOf="@+id/gl_right_email"
        app:layout_constraintStart_toStartOf="@+id/gl_left_email"
        app:layout_constraintTop_toBottomOf="@+id/et_email" />

    <Button
        android:id="@+id/bt_signup"
        android:background="@drawable/signup"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:text="Sign Up"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toStartOf="@+id/gl_right_email"
        app:layout_constraintStart_toStartOf="@+id/gl_left_email"
        app:layout_constraintTop_toBottomOf="@+id/et_password"
        android:textAllCaps="false"/>

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Login?"
        app:layout_constraintEnd_toStartOf="@+id/gl_right_email"
        app:layout_constraintStart_toStartOf="@+id/gl_left_email"
        app:layout_constraintTop_toBottomOf="@+id/bt_signup"
        android:textColor="@color/btSignupSolid"
        android:textAllCaps="false"
        android:gravity="center" />

    <TextView
        android:id="@+id/bt_reset"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:text="forgot password?"
        android:textAllCaps="false"
        android:textColor="@color/btSignupSolid"
        app:layout_constraintEnd_toStartOf="@+id/gl_right_email"
        app:layout_constraintStart_toStartOf="@+id/gl_left_email"
        app:layout_constraintTop_toBottomOf="@+id/tv_login" />

    <android.support.constraint.Guideline
        android:id="@+id/gl_left_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".2" />

    <android.support.constraint.Guideline
        android:id="@+id/gl_right_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8" />

</android.support.constraint.ConstraintLayout>